<script>
function myFunction(){

var a0 = document.getElementById("5pm1");
var a1 = document.getElementById("6pm1");
var a2 = document.getElementById("7pm1");

var b0 = document.getElementById("5pm2");
var b1 = document.getElementById("6pm2");
var b2 = document.getElementById("7pm2");

var a = [a0, a1, a2];
var b = [b0, b1, b2];
var val = "";

for (var i = 0; i < 12; i++){
	if ((a[i].selected && b[i].selected) && (a[i].value == b[i].value)){
		val += a[i].value;
		val += ' ';
	}
document.getElementById("demo1").innerHTML = On Monday, the two of you are both free at:";
document.getElementById("demo2").innerHTML = val;
}
}
</script>

